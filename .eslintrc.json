{
	"extends": "xo",
	"parserOptions": {
		"ecmaVersion": 8
	},
	"env": {
		"es6": true,
		"node": true
	},
	"rules": {
		"object-curly-spacing": [
			"error",
			"always"
		],
		"eqeqeq": [
			"error",
			"allow-null"
		],
		"no-eq-null": [
			"off"	
		],
		"comma-dangle": [
			"error",
			"always-multiline"
		],
		"prefer-const": [
			"error"
		],
		"no-var": [
			"error"
		],
		"max-statements": [
			"warn",
			25
		],
		"max-len": [
			"warn",
			{
				"code": 140,
				"tabWidth": 4,
				"ignoreUrls": true
			}
		]
	}
}
